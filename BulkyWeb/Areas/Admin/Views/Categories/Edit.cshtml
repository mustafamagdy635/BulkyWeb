@model Category

@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow border-0 mt-4">
    <div class=" card-header bg-secondary bg-gradient m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary ">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

<form asp-action="Edit">


            <div class="border p-3 mt-4">

  
    <div asp-validation-summary="All" class="text-danger"></div>


                <div class=" form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control shadow border-0" />
                    <label asp-for="Name" class="control-label ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class=" form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control shadow border-0" />
                    <label asp-for="DisplayOrder" class="control-label ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

    <div class="row mt-3">
        <div class="col-6 col-md-3">
            <input type="submit" value="Update" class="btn btn-primary form-control" />
        </div>
        <div class="col-6 col-md-3">
            <a asp-action="GetAllCategories" class="btn btn-secondary form-control">Back to List</a>
        </div>
    </div>
            </div>
</form>
    
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
