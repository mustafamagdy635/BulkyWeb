@model Category

@{
    ViewData["Title"] = "Delete";
}




<div class="card shadow border-0 mt-4">
    <div class=" card-header bg-secondary bg-gradient m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary ">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

<form asp-action="DeletePost">
    <input asp-for="Id" hidden/>

            <div class="border p-3 mt-4">

                <div class=" form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control  shadow border-0" />
                    <label asp-for="Name" class="control-label ms-2"></label>
                </div>
                <div class=" form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control  shadow border-0" />
                    <label asp-for="DisplayOrder" class="control-label ms-2"></label>
                </div>
                

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <input type="submit" value="Delete" class="btn btn-danger form-control" />
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="GetAllCategories" class="btn btn-secondary form-control">Back to List</a>
                    </div>
                </div>
         </div>
</form>
    </div>



