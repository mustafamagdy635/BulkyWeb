@model List<Category>

@{
    ViewData["Title"] = "GetAllCategories";
}

<div class="card shadow border-0 mt-4">
    <div class=" card-header bg-secondary bg-gradient m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary ">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

<div class="container">
    <div class="row  pb-3">
        <div class="col-6">
      
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category

            </a>

        </div>

    </div>

</div>

<table class="table">
    <thead>
        <tr>
            
            <th>
                Name
            </th>
            <th>
                DisplayOrder
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                <div class=" w-75 btn-group" role="group">
                    <a asp-action="Edit" asp-controller="Categories" asp-route-id="@item.Id"class=" btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Categories" class=" btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
